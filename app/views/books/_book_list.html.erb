<div class="row mt-5">
  <div class="col-12">
    <div class="card my-4">
      <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
          <h6 class="text-white text-capitalize ps-3">Listado de Libros</h6>
        </div>
      </div>
      <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
          <%= form_with url: books_path, method: :get, local: true do |form| %>
            <div class="p-3">
              <%= form_with url: books_path, method: :get, local: true do |form| %>
                <div class="input-group">
                  <%= form.text_field :query, placeholder: "Título, autor, género", class: "form-control" %>
                  <button type="submit" class="btn btn-dark mt-2" style="height: 100%;">Buscar</button>
                </div>
              <% end %>
            </div>
         <% end %>
          <table class="table align-items-center mb-0">
            <thead>
              <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Título</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Autor</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Género</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Disponibles</th>
                <th class="text-secondary opacity-7"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <div class="d-flex px-2 py-1">
                      <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm"><%= book.title %></h6>
                      </div>
                    </div>
                  </td>
                  <td>
                    <p class="text-xs font-weight-bold mb-0"><%= book.author.name %></p>
                  </td>
                  <td>
                    <p class="text-xs font-weight-bold mb-0"><%= book.genre.name %></p>
                  </td>
                  <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold"><%= book.available_copies %> / <%= book.total_copies %></span>
                  </td>
                  <td class="align-middle">
                    <% if user_signed_in? && current_user.librarian? %>
                      <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-sm btn-warning ms-2' %>
                    <% end %>
                  </td>
                  <td class="align-middle text-center">
                    <% if user_signed_in? && book.available_copies > 0 && !current_user.librarian? %>
                      <%= button_to 'Borrow', book_borrowings_path(book), method: :post, class: 'btn btn-sm btn-success' %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
