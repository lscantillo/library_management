<div class="row">
  <div class="col-12">
    <div class="card my-4">
      <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
          <h6 class="text-white text-capitalize ps-3">Libros Prestados</h6>
        </div>
      </div>
      <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
          <table class="table align-items-center mb-0">
            <thead>
              <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Título</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Fecha de Préstamo</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Fecha de Vencimiento</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Estado</th>
              </tr>
            </thead>
            <tbody>
              <% @borrowings.each do |borrowing| %>
                <tr>
                  <td>
                    <div class="d-flex px-2 py-1">
                      <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm"><%= borrowing.book.title %></h6>
                      </div>
                    </div>
                  </td>
                  <td>
                    <p class="text-xs font-weight-bold mb-0"><%= borrowing.borrowed_at.strftime("%d/%m/%Y") %></p>
                  </td>
                  <td>
                    <p class="text-xs font-weight-bold mb-0"><%= borrowing.due_date.strftime("%d/%m/%Y") %></p>
                  </td>
                  <td>
                    <% if borrowing.due_date < Date.today && borrowing.returned_at.nil? %>
                      <span class="badge badge-sm bg-gradient-danger">Overdue</span>
                    <% else %>
                      <span class="badge badge-sm bg-gradient-success">Active</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
