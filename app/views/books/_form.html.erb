<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(book.errors.count, "error") %> prevented this book from being saved:</h4>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-4">
    <%= form.label :title, "Title", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :author_id, "Author", class: "form-label" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, { prompt: "Select an author" }, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :genre_id, "Genre", class: "form-label" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "Select a genre" }, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :isbn, "ISBN", class: "form-label" %>
    <%= form.text_field :isbn, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :total_copies, "Total Copies", class: "form-label" %>
    <%= form.number_field :total_copies, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :available_copies, "Available Copies", class: "form-label" %>
    <%= form.number_field :available_copies, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save", class: "btn btn-dark" %>
  </div>
<% end %>
