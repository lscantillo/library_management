<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(book.errors.count, "error") %> prohibieron que este libro se guardara:</h4>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-4">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :author_id, "Autor", class: "form-label" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, { prompt: "Selecciona un autor" }, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :genre_id, "Género", class: "form-label" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name, { prompt: "Selecciona un género" }, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :isbn, class: "form-label" %>
    <%= form.text_field :isbn, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :total_copies, "Total de Copias", class: "form-label" %>
    <%= form.number_field :total_copies, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :available_copies, "Copias Disponibles", class: "form-label" %>
    <%= form.number_field :available_copies, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Guardar Libro", class: "btn btn-primary" %>
  </div>
<% end %>
