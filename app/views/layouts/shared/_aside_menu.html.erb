<aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start ms-2  bg-white my-2" id="sidenav-main">
    <div class="sidenav-header">
      <i class="bi bi-x p-3 cursor-pointer text-dark opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
      <a class="navbar-brand px-4 py-3 m-0" href=" https://demos.creative-tim.com/material-dashboard/pages/dashboard " target="_blank">
        <h3 class="ms-1 text-sm text-dark">Library Management</h3>
      </a>
    </div>
    <hr class="horizontal dark mt-0 mb-2">
    <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
      <ul class="navbar-nav">
        <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">Dashboard</h6>
        </li>
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link text-dark" do %>
            <i class="bi bi-table"></i>
            <span class="nav-link-text ms-1">Main</span>
          <% end %>
        </li>
        <% if current_user && current_user.librarian? %>
          <li class="nav-item mt-3">
            <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">Management</h6>
          </li>
          <%= link_to book_management_path, class: "nav-link text-dark" do %>
            <i class="bi bi-person"></i>
            <span class="nav-link-text ms-1">Manage Books</span>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="sidenav-footer position-absolute w-100 bottom-0 ">
      <div class="mx-3">
        <% if user_signed_in? %>
          <span class="text-secondary">Welcome, <%= current_user.email %></span>
          <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark w-100' %>
        <% end %>
      </div>
    </div>
  </aside>
