<% content_for :title, "Books" %>

<h1>Listado de Libros</h1>

<%= form_with url: books_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :query, "Buscar libros:" %>
    <%= form.text_field :query, placeholder: "Título, autor, género" %>
    <%= form.submit "Buscar" %>
  </div>
<% end %>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
